# SpectraHost - Vereinfachte Plesk .htaccess
RewriteEngine On

# Basis-Einstellungen
Options -Indexes +FollowSymLinks
DirectoryIndex index.php
AddDefaultCharset UTF-8

# PHP-Konfiguration für Plesk
<IfModule mod_php.c>
    php_value memory_limit 256M
    php_value max_execution_time 60
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value session.gc_maxlifetime 7200
    php_value display_errors 0
    php_value log_errors 1
</IfModule>

# Sicherheitsheader
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Sensible Dateien schützen
<FilesMatch "\.(env|sql|log|bak|config)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# API-Routing (direkte Weiterleitung wenn Datei existiert)
RewriteCond %{REQUEST_URI} ^/api/
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Statische Dateien direkt ausliefern
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Alle anderen Anfragen an index.php weiterleiten
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]

# Komprimierung
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# Browser-Cache
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/* "access plus 6 months"
</IfModule>

# Error Pages
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php