# SpectraHost Production Configuration
# Copy this file to .env and configure your production values

# Database Configuration (MySQL)
MYSQL_HOST=localhost
MYSQL_DATABASE=spectrahost
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_db_password
MYSQL_PORT=3306

# Mollie Payment Configuration
MOLLIE_API_KEY=live_your_mollie_api_key_here

# Proxmox VE Configuration
PROXMOX_HOST=45.137.68.202
PROXMOX_USERNAME=spectrahost@pve
PROXMOX_PASSWORD=your_proxmox_password
PROXMOX_NODE=bl1-4

# Session Configuration
SESSION_SECRET=your_random_session_secret_here

# Application Settings
APP_ENV=production
APP_DEBUG=false
BASE_URL=https://spectrahost.de

# Email Configuration (Optional)
SMTP_HOST=mail.spectrahost.de
SMTP_PORT=587
SMTP_USERNAME=noreply@spectrahost.de
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@spectrahost.de
SMTP_FROM_NAME=SpectraHost

# Security Settings
CSRF_SECRET=your_csrf_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here